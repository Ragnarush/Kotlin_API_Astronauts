<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_rv_gradient">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:text="@string/name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameItem"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCraft"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:text="@string/craft"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvCraftItem"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCraft"
        app:layout_constraintTop_toBottomOf="@+id/tvNameItem" />

</androidx.constraintlayout.widget.ConstraintLayout>